<%- model_class = Province -%>
<div class="row">
    <div class="col-lg-2">
        <h1 class="page-header">省份城市管理 </h1>
    </div class="col-lg-1">
    <div><h1 class="page-header"><%= link_to t('.new', :default => "新增记录"),new_province_path,:class => 'btn btn-primary' %></h1></div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            <label><input type="search" class="form-control" placeholder="名称" size="8" ></label>
            &nbsp;&nbsp;
            &nbsp;&nbsp;<button type="button" class="btn btn-primary" aria-hidden="true">查询</button>
            &nbsp;&nbsp;<button type="button" class="btn btn-warning">导出</button>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th><%= model_class.human_attribute_name(:id) %></th>
                        <th><%= model_class.human_attribute_name(:name) %></th>
                        <th><%= model_class.human_attribute_name(:created_at) %></th>
                        <th><%=t '.actions', :default => t("helpers.actions") %></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @provinces.each do |province| %>
                        <tr>
                          <td><%= link_to province.id, province_path(province) %></td>
                          <td><%= province.name %></td>
                          <td><%= province.created_at %></td>
                          <td>
                            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                        edit_province_path(province), :class => 'btn btn-default btn-xs' %>
                            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                        province_path(province),
                                        :method => :delete,
                                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                        :class => 'btn btn-xs btn-danger' %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>