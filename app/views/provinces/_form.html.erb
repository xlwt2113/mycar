<%= form_for @province, :html => { :class => "form-horizontal" } do |f| %>

  <% if @province.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@province.errors.count, "error") %> prohibited this province from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @province.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-1' ,:value=>'士大夫士大夫到沙发'%>
    <div class="col-lg-4">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                provinces_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
